        <Label text="Id:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="txtId" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        
        <Label text="Nama:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="txtNama" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        
        <Label text="Telepon:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="txtTelepon" GridPane.columnIndex="1" GridPane.rowIndex="3" />
