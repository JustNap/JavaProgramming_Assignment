         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>
    
    <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="260.0" spacing="10.0">
        <Button mnemonicParsing="false" onAction="#handleSimpan" text="Simpan" />
    </HBox>
</VBox>
